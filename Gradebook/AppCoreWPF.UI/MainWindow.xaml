<Window x:Class="AppCoreWPF.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCoreWPF.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox>
            <ListBox x:Name="samuraiListBox" Height="100" Width="100"/>
            <TextBox x:Name="Name" Text="TextBox" TextWrapping="Wrap" Width="100" RenderTransformOrigin="0.892,0.698" Height="24"/>
            <TextBox x:Name="Real_Name" Text="TextBox" TextWrapping="Wrap" Width="120"/>
            <ListBox x:Name="QuotesListBox" Height="100" Width="100" SelectionChanged="QuotesListBox_SelectionChanged"/>
            <Button x:Name="NewSamurai" Content="Button" AutomationProperties.Name="New Samurai" Click="NewSamurai_Click"/>
            <Button x:Name="Save" Content="Button"/>
        </ListBox>

    </Grid>
</Window>
