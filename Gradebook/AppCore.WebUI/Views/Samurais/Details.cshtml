@model AppCore.Domain.Samurai

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Samurai</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecretIdentity.RealName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecretIdentity.RealName)
        </dd>

    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Quotes</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.Quotes)
    {
        <tr>
            <td>@item.Text</td>
        </tr>
    }
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
